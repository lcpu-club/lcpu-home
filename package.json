{
  "name": "lcpu-home",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:default": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "prettier --write . && eslint . --fix",
    "format": "prettier --write src/",
    "build:client": "vite build --outDir dist/static --ssrManifest",
    "build:server": "vite build --outDir dist/server --ssr src/entry-server.ts",
    "build:bundle": "run-p build:client build:server",
    "build:render": "bunx tsx prerender.ts",
    "build:sitemap": "bun ./sitemap.ts",
    "build:post": "run-p build:render build:sitemap",
    "build:minify": "bun ./minify.ts",
    "build:feed": "bun ./feed.ts",
    "build": "run-s build:bundle build:post build:feed build:minify"
  },
  "dependencies": {
    "@heroicons/vue": "^2.2.0",
    "@vueuse/core": "^12.2.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@mdit-vue/plugin-component": "^2.1.3",
    "@mdit-vue/plugin-headers": "^2.1.3",
    "@mdit-vue/plugin-sfc": "^2.1.3",
    "@mdit/plugin-img-lazyload": "^0.16.0",
    "@shikijs/markdown-it": "^1.24.4",
    "@shikijs/transformers": "^1.24.4",
    "@tsconfig/node22": "^22.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-container": "^2.0.10",
    "@types/node": "^22.10.2",
    "@types/serve-static": "^1.15.7",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.2.0",
    "@vue/tsconfig": "^0.7.0",
    "chalk": "^5.4.1",
    "cheerio": "^1.0.0",
    "compression": "^1.7.5",
    "eslint": "^9.17.0",
    "eslint-plugin-vue": "^9.32.0",
    "express": "^4.21.2",
    "fast-glob": "^3.3.2",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "html-minifier": "^4.0.0",
    "image-size": "^1.2.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-container": "^4.0.0",
    "markdown-it-mathjax3": "^4.3.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.4.2",
    "shiki": "^1.24.4",
    "sitemap": "^8.0.0",
    "typescript": "~5.6.3",
    "unocss": "^0.65.3",
    "vite": "^6.0.6",
    "vite-plugin-vue-devtools": "^7.6.8",
    "vue-tsc": "^2.2.0"
  }
}
